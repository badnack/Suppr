<h1>Listing dinners</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<%= link_to 'Host a Suppr', new_dinner_path %>


<% @dinners.each do |dinner| %>
<div class="list_row">
  <tr>
    <td>
      <div id="div_button_rsvp">
        <%= link_to 'Join', {:id => dinner.id, :controller => "dinners", :action => "join"}, :class => "fill-div", :remote => true %>
      </div>
    </td>
    <td>
      <div class="div_button_info">
        <%= link_to 'Details', {:id => dinner.id, :controller => "dinners", :action => "show"}, :class => "fill-div" %>
      </div>
    </td>

    <td>
      <div class="div_image">
        <%= link_to image_tag(dinner.photo, class: 'list_image'), {:id => dinner.id, :controller => "dinners", :action => "show"} %>
      </div>
    </td>
    <div class="list_text">
      <h2><td><%= dinner.title %></td></h2>
      <p><td><%= dinner.description %></td></p>
      <p>Date: <td><%= dinner.date %></td></p>
      <!-- <p>Location: <td><%= dinner.location %></td></p> -->
      <!-- <td><%= dinner.price %></td> -->
      <!-- <td><%= dinner.seats %></td> -->
      <p>Seats Available: <td><%= dinner.seats_available %></td></p>
      <!-- <td><%= dinner.stamp %></td>          -->
      <!-- <p>Category: <td><%= dinner.category %></td></p> -->

    </div>
  </tr>
  <br>
</div>
<% end %>
