<h1>Listing dinners</h1>
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Date</th>
      <th>Location</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Price</th>
      <th>Seats available</th>
      <th>Stamp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>




    <% @dinners.each do |dinner| %>
      <tr>




        <td>
            <div>
                <%= image_tag(dinner.photo) %> 
            <div>
        </td>
        <td><%= dinner.title %></td>
        <td><%= dinner.date %></td>
        <td><%= dinner.location %></td>
        <td><%= dinner.description %></td>
        <td><%= dinner.category %></td>
        <td><%= dinner.price %></td>
        <td><%= dinner.seats_available %></td>
        <td><%= dinner.stamp %></td>
        <td><%= link_to 'Show', dinner %></td>
        <td><%= link_to 'Edit', edit_dinner_path(dinner) %></td>
        <td><%= link_to 'Destroy', dinner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dinner', new_dinner_path %>
